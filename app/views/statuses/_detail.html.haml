%table{:class => 'table table-bordered table-striped'}
  %thead
    %tr
      %th{:style => "width: 150px;"} 項目
      %th 内容
  %tbody
    %tr
      %td ID
      %td= @status.id
    %tr
      %td テキスト
      %td= @status.text
    %tr
      %td 作成日時
      %td= @status.created_at.strftime("%Y/%m/%d %X")
    %tr
      %td 変更日時
      %td= @status.created_at.strftime("%Y/%m/%d %X")
    %tr
      %td 操作
      %td= link_to 'この内容で罵倒する', "https://twitter.com/intent/tweet?text=#{@status.text}", :class => 'btn btn btn', :target => '_blank'
